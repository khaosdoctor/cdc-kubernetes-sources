{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "api-pod",
    "labels": {
      "app": "simple-api"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "simple-api",
        "image": "khaosdoctor/simple-node-api",
        "env": [
            {"name": "PORT", "value": "8080"}
        ],
        "ports": [{
          "containerPort": 8080,
          "name": "porta-api"
        }]
      }
    ]
  }
}
